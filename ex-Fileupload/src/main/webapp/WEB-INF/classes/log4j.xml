<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="sysout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout" />
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p [%c] %m%n" />
		</layout>
	</appender>

	<logger name="sysoutLogger" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="sysout" />
	</logger>

	<logger name="egovframework" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="console" />
	</logger>
	
	<!-- DebugInterceptor 적용 대상 logger 는 TRACE 레벨로 정의 -->
	<!--
	<logger name="org.springframework.aop.interceptor.DebugInterceptor" additivity="false">
		<level value="TRACE" />
		<appender-ref ref="console" />
	</logger>
	-->
	<logger name="org.springframework.aop.interceptor.CustomizableTraceInterceptor" additivity="false">
		<level value="TRACE" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.springframework" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>

	<root>
		<level value="ERROR" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
