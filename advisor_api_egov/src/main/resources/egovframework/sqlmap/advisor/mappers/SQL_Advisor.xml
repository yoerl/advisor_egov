<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.counseling.advisor.service.impl.AdvisorMapper">
                   
<resultMap id="advisorDTO" type="egovframework.counseling.advisor.service.impl.AdvisorDTO">
    <result property="cntn" column="CNTN"/>
    <result property="id" column="ID"/>
    
    
    <result property="consHstrId" column="CONS_HSTR_ID"/>
    <result property="sqnc" column="SQNC"/>
    <result property="kmsCntsSqnc" column="KMS_CNTS_SQNC"/>
    
	
	
</resultMap>


	<update id="updateSummary" parameterType="egovframework.counseling.advisor.service.impl.AdvisorDTO">
		UPDATE ais.tb_ai_brf_hstr
		SET ai_brf_cntn = #{cntn}
		WHERE cons_hstr_id = #{id}
	</update>
	
	

	<update id="updateKmsRply" parameterType="egovframework.counseling.advisor.service.impl.AdvisorDTO">
		UPDATE ais.tb_ai_kms_rply_hist
		SET use_div_cd = "Y"
		where 1=1
		and cons_hstr_id = #{consHstrId}
		and sqnc = #{sqnc}
		and kms_cnts_sqnc = #{kmsCntsSqnc}
	</update>
	


	<update id="updateAiRplyHist" parameterType="egovframework.counseling.advisor.service.impl.AdvisorDTO">
		UPDATE ais.tb_ai_rply_hist
		SET use_div_cd = "Y"
		where 1=1
		and cons_hstr_id=#{consHstrId}
		and sqnc =#{sqnc}
	</update>
	
</mapper>